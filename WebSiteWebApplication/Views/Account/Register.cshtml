
    @{
        ViewBag.Title = "Register";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }

<div class="col-md-6 col-md-offset-3 mx-auto">
    <h2 class="auth-title">Sign up</h2>
    <form action="~/Account/Register" method="post" id="signup-form">
        <input type="text" name="Login" class="form-control" placeholder="Login" id="signup-login" />
        <input type="password" name="Password" class="form-control" placeholder="Password" id="signup-pass" />
        <input type="password" name="RepeatPassword" class="form-control" placeholder="Confirm password" id="signup-pass-confirm" />
        <button type="submit" id="signup-submit" class="btn btn-success">Submit</button>
    </form>
</div>